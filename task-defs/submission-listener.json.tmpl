{
  "family": "osc-submission-listener",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "${cpu}",
  "memory": "${memory}",
  "executionRoleArn": "${execution_role_arn}",
  "taskRoleArn": "${task_role_arn}",
  "containerDefinitions": [
    {
      "name": "submission-listener",
      "image": "${image}",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        { "name": "RABBITMQ_HOST", "value": "${rabbitmq_host}" },
        { "name": "RABBITMQ_PORT", "value": "${rabbitmq_port}" },
        { "name": "RABBITMQ_QUEUE_SUBMITTED", "value": "${rabbitmq_queue_submitted}" },
        { "name": "RABBITMQ_QUEUE_UPDATED", "value": "${rabbitmq_queue_updated}" },
        { "name": "API_GATEWAY_URL", "value": "${api_gateway_url}" },
        { "name": "ENVIRONMENT", "value": "${environment}" }
      ],
      "secrets": [
        { "name": "RABBITMQ_USER", "valueFrom": "${rabbitmq_user_secret_arn}" },
        { "name": "RABBITMQ_PASS", "valueFrom": "${rabbitmq_pass_secret_arn}" },
        { "name": "SUBMISSION_LISTENER_API_KEY", "valueFrom": "${submission_listener_api_key_secret_arn}" },
        { "name": "SUBMISSION_LISTENER_SERVICE_ROLE", "valueFrom": "${submission_listener_service_role_secret_arn}" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "${log_group}",
          "awslogs-region": "${aws_region}",
          "awslogs-stream-prefix": "submission-listener"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "python -c 'import requests; requests.get(\"http://localhost:8000/health\", timeout=5)' || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}
